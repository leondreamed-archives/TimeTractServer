type User {
  id: ID! @id @unique
  username: String! @unique
  password: String!
  accessToken: String
  rescueTimeData: RescueTimeData
  groups: [Group!]! @relation(name: "GroupMembers", link: INLINE)
  avatarUrl: String
}

type RescueTimeData @embedded {
  productiveTime: Int
  distractingTime: Int
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Group {
  id: ID! @id @unique
  name: String! @unique
  blurb: String! @default(value: "")
  description: String! @default(value: "")
  leader: User! @relation(name: "GroupLeader", link: INLINE)
  members: [User!]! @relation(name: "GroupMembers")
}